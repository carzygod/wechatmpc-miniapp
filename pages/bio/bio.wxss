/* 页面 wxss 文件 */
.container {
  padding: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
}

.info-box {
  background-color: #f8f8f8;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  margin-bottom: 10rpx;
}

.label {
  color: #666;
  width: 220rpx;
}

.value {
  flex: 1;
  color: #333;
}

button {
  width: 100%;
  margin: 30rpx 0;
}

.result-box {
  margin-top: 30rpx;
  background-color: #f0f9eb;
  padding: 20rpx;
  border-radius: 10rpx;
}

.result-title {
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.result-content {
  word-break: break-all;
  font-size: 28rpx;
}